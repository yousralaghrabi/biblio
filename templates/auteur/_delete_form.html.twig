<form method="post" action="{{ path('app_auteur_delete', {'id': auteur.id}) }}" 
      onsubmit="return confirm('Are you sure you want to delete this author? This action cannot be undone.');"
      class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ auteur.id) }}">
    <button class="btn btn-danger btn-icon" type="submit">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>
