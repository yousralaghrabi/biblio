{% extends 'base.html.twig' %}

{% block title %}Authors{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="page-header">
        <h1><i class="bi bi-person-badge"></i> Authors</h1>
        <p class="subtitle">Manage book authors</p>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="badge bg-info">{{ auteurs|length }} author(s)</span>
        </div>
        <a href="{{ path('app_auteur_new') }}" class="btn btn-info btn-icon">
            <i class="bi bi-plus-circle"></i> Add New Author
        </a>
    </div>

    {% if auteurs|length > 0 %}
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Birth Date</th>
                            <th>Nationality</th>
                            <th>Biography</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for auteur in auteurs %}
                            <tr>
                                <td><strong>#{{ auteur.id }}</strong></td>
                                <td>
                                    <strong>{{ auteur.prenom }} {{ auteur.nom }}</strong>
                                </td>
                                <td>
                                    {% if auteur.datenaissance %}
                                        <i class="bi bi-calendar"></i> {{ auteur.datenaissance|date('Y-m-d') }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if auteur.nationalite %}
                                        <i class="bi bi-globe"></i> {{ auteur.nationalite }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if auteur.biographie %}
                                        {{ auteur.biographie|slice(0, 50) }}{% if auteur.biographie|length > 50 %}...{% endif %}
                                    {% else %}
                                        <span class="text-muted">No biography</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_auteur_show', {'id': auteur.id}) }}" 
                                           class="btn btn-sm btn-info btn-icon" 
                                           title="View details">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" 
                                           class="btn btn-sm btn-primary btn-icon" 
                                           title="Edit author">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i class="bi bi-person-badge"></i>
                    <h3>No authors found</h3>
                    <p class="text-muted">Get started by adding your first author.</p>
                    <a href="{{ path('app_auteur_new') }}" class="btn btn-info btn-icon mt-3">
                        <i class="bi bi-plus-circle"></i> Add Your First Author
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
