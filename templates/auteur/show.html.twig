{% extends 'base.html.twig' %}

{% block title %}{{ auteur.prenom }} {{ auteur.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_auteur_index') }}" class="btn btn-outline-secondary btn-icon">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <div class="action-buttons">
            <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="btn btn-primary btn-icon">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="mb-0"><i class="bi bi-person-badge"></i> Author Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">ID</label>
                    <div class="fs-5"><strong>#{{ auteur.id }}</strong></div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">First Name</label>
                    <div class="fs-5 fw-bold">{{ auteur.prenom }}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Last Name</label>
                    <div class="fs-5 fw-bold">{{ auteur.nom }}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Birth Date</label>
                    <div class="fs-5">
                        {% if auteur.datenaissance %}
                            <i class="bi bi-calendar"></i> {{ auteur.datenaissance|date('F d, Y') }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Nationality</label>
                    <div class="fs-5">
                        {% if auteur.nationalite %}
                            <i class="bi bi-globe"></i> {{ auteur.nationalite }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-12 mb-3">
                    <label class="form-label text-muted">Biography</label>
                    <div class="fs-5">
                        {% if auteur.biographie %}
                            <p>{{ auteur.biographie }}</p>
                        {% else %}
                            <span class="text-muted">No biography available</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="action-buttons">
                <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}" class="btn btn-primary btn-icon">
                    <i class="bi bi-pencil"></i> Edit Author
                </a>
                {{ include('auteur/_delete_form.html.twig') }}
                <a href="{{ path('app_auteur_index') }}" class="btn btn-outline-secondary btn-icon">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
