{% extends 'base.html.twig' %}

{% block title %}{{ livre.titre }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary btn-icon">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <div class="action-buttons">
            <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-primary btn-icon">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="mb-0"><i class="bi bi-book"></i> Book Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">ID</label>
                    <div class="fs-5"><strong>#{{ livre.id }}</strong></div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Status</label>
                    <div>
                        {% if livre.disponible %}
                            <span class="badge bg-success fs-6">
                                <i class="bi bi-check-circle"></i> Available
                            </span>
                        {% else %}
                            <span class="badge bg-danger fs-6">
                                <i class="bi bi-x-circle"></i> Unavailable
                            </span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-12 mb-3">
                    <label class="form-label text-muted">Title</label>
                    <div class="fs-4 fw-bold">{{ livre.titre }}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">ISBN</label>
                    <div class="fs-5">
                        <code>{{ livre.isbn }}</code>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Publication Date</label>
                    <div class="fs-5">
                        {% if livre.datepublication %}
                            <i class="bi bi-calendar"></i> {{ livre.datepublication|date('F d, Y') }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="action-buttons">
                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-primary btn-icon">
                    <i class="bi bi-pencil"></i> Edit Book
                </a>
                {{ include('livre/_delete_form.html.twig') }}
                <a href="{{ path('app_livre_index') }}" class="btn btn-outline-secondary btn-icon">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
