{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="page-header">
        <h1><i class="bi bi-book"></i> Books</h1>
        <p class="subtitle">Manage your book collection</p>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="badge bg-primary">{{ livres|length }} book(s)</span>
        </div>
        <a href="{{ path('app_livre_new') }}" class="btn btn-primary btn-icon">
            <i class="bi bi-plus-circle"></i> Add New Book
        </a>
    </div>

    {% if livres|length > 0 %}
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>ISBN</th>
                            <th>Publication Date</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for livre in livres %}
                            <tr>
                                <td><strong>#{{ livre.id }}</strong></td>
                                <td>
                                    <strong>{{ livre.titre }}</strong>
                                </td>
                                <td>
                                    <code>{{ livre.isbn }}</code>
                                </td>
                                <td>
                                    {% if livre.datepublication %}
                                        <i class="bi bi-calendar"></i> {{ livre.datepublication|date('Y-m-d') }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if livre.disponible %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Available
                                        </span>
                                    {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-x-circle"></i> Unavailable
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_livre_show', {'id': livre.id}) }}" 
                                           class="btn btn-sm btn-info btn-icon" 
                                           title="View details">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" 
                                           class="btn btn-sm btn-primary btn-icon" 
                                           title="Edit book">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i class="bi bi-book"></i>
                    <h3>No books found</h3>
                    <p class="text-muted">Get started by adding your first book to the collection.</p>
                    <a href="{{ path('app_livre_new') }}" class="btn btn-primary btn-icon mt-3">
                        <i class="bi bi-plus-circle"></i> Add Your First Book
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
