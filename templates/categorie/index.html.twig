{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="page-header">
        <h1><i class="bi bi-tags"></i> Categories</h1>
        <p class="subtitle">Manage book categories</p>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="badge bg-secondary">{{ categories|length }} category/categories</span>
        </div>
        <a href="{{ path('app_categorie_new') }}" class="btn btn-secondary btn-icon">
            <i class="bi bi-plus-circle"></i> Add New Category
        </a>
    </div>

    {% if categories|length > 0 %}
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in categories %}
                            <tr>
                                <td><strong>#{{ categorie.id }}</strong></td>
                                <td><strong>{{ categorie.nom }}</strong></td>
                                <td>{{ categorie.nomCategorie }}</td>
                                <td>
                                    {% if categorie.description %}
                                        {{ categorie.description|slice(0, 50) }}{% if categorie.description|length > 50 %}...{% endif %}
                                    {% else %}
                                        <span class="text-muted">No description</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" 
                                           class="btn btn-sm btn-info btn-icon" 
                                           title="View details">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" 
                                           class="btn btn-sm btn-primary btn-icon" 
                                           title="Edit category">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i class="bi bi-tags"></i>
                    <h3>No categories found</h3>
                    <p class="text-muted">Get started by adding your first category.</p>
                    <a href="{{ path('app_categorie_new') }}" class="btn btn-secondary btn-icon mt-3">
                        <i class="bi bi-plus-circle"></i> Add Your First Category
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
