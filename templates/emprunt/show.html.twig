{% extends 'base.html.twig' %}

{% block title %}Loan #{{ emprunt.id }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_emprunt_index') }}" class="btn btn-outline-secondary btn-icon">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <div class="action-buttons">
            <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}" class="btn btn-primary btn-icon">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="mb-0"><i class="bi bi-bookmark-check"></i> Loan Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">ID</label>
                    <div class="fs-5"><strong>#{{ emprunt.id }}</strong></div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Status</label>
                    <div>
                        <span class="badge bg-primary fs-6">{{ emprunt.statut }}</span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Loan Date</label>
                    <div class="fs-5">
                        {% if emprunt.dateemprunt %}
                            <i class="bi bi-calendar"></i> {{ emprunt.dateemprunt|date('F d, Y H:i') }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Expected Return Date</label>
                    <div class="fs-5">
                        {% if emprunt.dateretourneprevue %}
                            <i class="bi bi-calendar-check"></i> {{ emprunt.dateretourneprevue|date('F d, Y H:i') }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Actual Return Date</label>
                    <div class="fs-5">
                        {% if emprunt.dateretourneeffective %}
                            <i class="bi bi-calendar-x"></i> {{ emprunt.dateretourneeffective|date('F d, Y H:i') }}
                        {% else %}
                            <span class="text-muted">Not returned yet</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="action-buttons">
                <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}" class="btn btn-primary btn-icon">
                    <i class="bi bi-pencil"></i> Edit Loan
                </a>
                {{ include('emprunt/_delete_form.html.twig') }}
                <a href="{{ path('app_emprunt_index') }}" class="btn btn-outline-secondary btn-icon">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
