{% extends 'base.html.twig' %}

{% block title %}Loans{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="page-header">
        <h1><i class="bi bi-bookmark-check"></i> Loans</h1>
        <p class="subtitle">Manage book loans</p>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle"></i> {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <span class="badge bg-warning">{{ emprunts|length }} loan(s)</span>
        </div>
        <a href="{{ path('app_emprunt_new') }}" class="btn btn-warning btn-icon">
            <i class="bi bi-plus-circle"></i> New Loan
        </a>
    </div>

    {% if emprunts|length > 0 %}
        <div class="table-container">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Loan Date</th>
                            <th>Expected Return</th>
                            <th>Actual Return</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for emprunt in emprunts %}
                            <tr>
                                <td><strong>#{{ emprunt.id }}</strong></td>
                                <td>
                                    {% if emprunt.dateemprunt %}
                                        <i class="bi bi-calendar"></i> {{ emprunt.dateemprunt|date('Y-m-d') }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if emprunt.dateretourneprevue %}
                                        <i class="bi bi-calendar-check"></i> {{ emprunt.dateretourneprevue|date('Y-m-d') }}
                                    {% else %}
                                        <span class="text-muted">N/A</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if emprunt.dateretourneeffective %}
                                        <i class="bi bi-calendar-x"></i> {{ emprunt.dateretourneeffective|date('Y-m-d') }}
                                    {% else %}
                                        <span class="text-muted">Not returned</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="badge bg-primary">{{ emprunt.statut }}</span>
                                </td>
                                <td class="text-end">
                                    <div class="action-buttons">
                                        <a href="{{ path('app_emprunt_show', {'id': emprunt.id}) }}" 
                                           class="btn btn-sm btn-info btn-icon" 
                                           title="View details">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="{{ path('app_emprunt_edit', {'id': emprunt.id}) }}" 
                                           class="btn btn-sm btn-primary btn-icon" 
                                           title="Edit loan">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i class="bi bi-bookmark-check"></i>
                    <h3>No loans found</h3>
                    <p class="text-muted">Get started by creating your first loan.</p>
                    <a href="{{ path('app_emprunt_new') }}" class="btn btn-warning btn-icon mt-3">
                        <i class="bi bi-plus-circle"></i> Create Your First Loan
                    </a>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
