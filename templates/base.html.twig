<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/app-accessibility.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <a class="skip-link" href="#main-content" aria-label="Aller au contenu principal">
            <i class="bi bi-arrow-right-short" aria-hidden="true"></i>
            <span class="skip-link-text">Aller au contenu principal</span>
        </a>
        <nav class="navbar navbar-expand-lg navbar-dark mb-4" aria-label="Main navigation">
            <div class="container">
                <a class="navbar-brand" href="{% if app.user %}{{ path('app_dashboard_index') }}{% else %}{{ path('app_home') }}{% endif %}">
                    <i class="bi bi-book"></i> Mini App
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_dashboard_index') }}">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_livre_index') }}">
                                <i class="bi bi-book"></i> Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_adherent_index') }}">
                                <i class="bi bi-people"></i> Members
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_emprunt_index') }}">
                                <i class="bi bi-bookmark-check"></i> Loans
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_auteur_index') }}">
                                <i class="bi bi-person-badge"></i> Authors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_categorie_index') }}">
                                <i class="bi bi-tags"></i> Categories
                            </a>
                        </li>

                        {% if app.user %}
                            <li class="nav-item">
                                <span class="navbar-text me-3">
                                    <i class="bi bi-person-circle"></i> Welcome, {{ app.user.yousraLaghrabi }}!
                                </span>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_register') }}">
                                    <i class="bi bi-person-plus"></i> Register
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <main id="main-content" tabindex="-1">
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
