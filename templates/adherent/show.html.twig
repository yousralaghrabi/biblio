{% extends 'base.html.twig' %}

{% block title %}{{ adherent.prenom }} {{ adherent.nom }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="{{ path('app_adherent_index') }}" class="btn btn-outline-secondary btn-icon">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
        <div class="action-buttons">
            <a href="{{ path('app_adherent_edit', {'id': adherent.id}) }}" class="btn btn-primary btn-icon">
                <i class="bi bi-pencil"></i> Edit
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h2 class="mb-0"><i class="bi bi-person-circle"></i> Member Details</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">ID</label>
                    <div class="fs-5"><strong>#{{ adherent.id }}</strong></div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Status</label>
                    <div>
                        <span class="badge bg-primary fs-6">{{ adherent.statut }}</span>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">First Name</label>
                    <div class="fs-5 fw-bold">{{ adherent.prenom }}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Last Name</label>
                    <div class="fs-5 fw-bold">{{ adherent.nom }}</div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Email</label>
                    <div class="fs-5">
                        <i class="bi bi-envelope"></i> {{ adherent.email }}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Phone</label>
                    <div class="fs-5">
                        <i class="bi bi-telephone"></i> {{ adherent.telephone }}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Registration Date</label>
                    <div class="fs-5">
                        {% if adherent.dateinscription %}
                            <i class="bi bi-calendar"></i> {{ adherent.dateinscription }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label class="form-label text-muted">Registration DateTime</label>
                    <div class="fs-5">
                        {% if adherent.datetimr %}
                            <i class="bi bi-clock"></i> {{ adherent.datetimr|date('Y-m-d H:i:s') }}
                        {% else %}
                            <span class="text-muted">Not specified</span>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="action-buttons">
                <a href="{{ path('app_adherent_edit', {'id': adherent.id}) }}" class="btn btn-primary btn-icon">
                    <i class="bi bi-pencil"></i> Edit Member
                </a>
                {{ include('adherent/_delete_form.html.twig') }}
                <a href="{{ path('app_adherent_index') }}" class="btn btn-outline-secondary btn-icon">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
